<%
=begin%>
 <%= render "shared/header" %>  
<%
=end%>
<div class="wrapper">
  <div class= "side-bar">
    <div class= "side-header">
      <div class="user-name">
      <%= link_to  edit_user_path(current_user) do  %>
        <%= current_user.nickname%>
      <% end %>
      </div>
      <div class="room-create">
      <%#ユーザーidと練習場所idが共に中間テーブルに存在しないならチャットに参加するを表示%>
        <% unless @user_places.where(user_id: current_user, place_id: @place.id).exists? %>
          <%= form_with model: [@user_place, @place], url: user_places_path, method: :post, local: true do |f| %>
            <input name="user_place[user_id][]" type="hidden" value=<%=current_user.id%>>
            <input name="user_place[place_id][]" type="hidden" value=<%=@place.id%>>
            <%= f.submit "チャットに参加する" %>
          <% end %>
        <% else %>
          <p>参加中</p>
        <% end %>
      </div>
    </div>
    <div class= "rooms">
        <div class="room">
          <p>練習場所の住所 :  </p><p class= "place-info"><%= @place.address%></p>
          <p>１時間当たりの金額 : </p><p class= "place-info"><%= @place.price%>円</p>
          <p>よく練習している時間 : </p><p class= "place-info"><%= @place.main_time%></p>
          <p>利用可能時間 : </p><p class= "place-info"><%= @place.available_time%></p>
          <p>このチャットに参加している人数 : </p><p class= "place-info"><%= "#{@user_places.where(place_id: @place.id).count}人"%></p>
        </div>
    </div>
  </div>

  <div class = "main-chat">
    <div class="main-header">
      <div class="title">
        <%= @place.name%>
      </div>
      <div class="exit">
        <%= link_to "ここの情報を編集する", edit_place_path(@place), method: :get %>
        <%= link_to "削除する", place_path(@place), method: :delete  %>
        <%= link_to "トップページへ戻る" ,root_path %>
      </div>
    </div>
    <div class="main-main">
      <div id='messages' class="message-contents">
        <% @messages.reverse_each do |message| %>
          <div class="message-content">
            <div class="message-name">
              <p><%= message.user.nickname %></p>
            </div>
            <div class="created-at">
              <p><%= message.created_at %></p>
            </div>
          </div>
          <div class="lower-message">
            <div class="text">
              <p><%= message.text %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <% if @user_places.where(user_id: current_user, place_id: @place.id).exists? %>
      <%= form_with model: [@place, @message], html: {class: "form"} do |f| %>
          <%= f.text_field :text, class: 'message' %>
          <label class="form-image">
            <span class="image-file">画像</span>
          </label>
          <%= f.submit '送信', class: 'commit' %>
      <% end %>
    <% end %>
  </div>
</div>