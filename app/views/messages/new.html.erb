<%= render "shared/header" %> 
<div class="wrapper">
  <div class= "side-bar">
    <div class= "side-header">
      <div class="user-name">
      <%= link_to  edit_user_path(current_user) do  %>
        <%= current_user.nickname%>
      <% end %>
      </div>
      <div class="room-create">
        チャットに参加する
      </div>
    </div>
    <div class= "rooms">
        <div class="room">
          <%= @place.address%>
          <%= @place.price%>
          <%= @place.main_time%>
          <%= @place.available_time%>
        </div>
    </div>
  </div>

  <div class = "main-chat">
    <div class="main-header">
      <div class="title">
          <%= @place.name%>
      </div>
      <div class="exit">
<%= link_to "ここの情報を編集する", edit_place_path(@place), method: :get %>
<%= link_to "削除する", place_path(@place), method: :delete  %>
<%= link_to "トップページへ戻る" ,root_path %>
      </div>
    </div>
    <div class="main-main">
    </div>

      <div class="messages">
        <label class="form-image">
          <span class="image-file">画像</span>
        </label>
      </div>
  </div>
</div>