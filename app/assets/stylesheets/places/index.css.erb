.place {
  font-size:32px;
  font-weight:bold;
  position: relative;
  padding:8px;
  margin-bottom:24px;
  text-align: center;
}

.place:before {
  position: absolute;
  bottom: -5px;
  left: calc(50% - 30px);
  width: 60px;
  height: 5px;
  content: '';
  border-radius: 3px;
  background: red;
}

#target {
  width: 750px;
  height: 400px;
}

.search {
  padding-top:24px;
  display:block;
}

#address {
  display:inline-block;
  width:300px;
}

#search {
  cursor:pointer;
  display: inline-block;
  appearance: none;
  border: 0;
  border-radius: 5px;
  background: #fd9535;
  color: #fff;
  padding: 8px 16px;
  font-size: 16px;
}

#search:hover {
  background: #fda555;
}

.new-place {
  font-size:32px;
  font-weight:bold;
  padding:0 8px;
  margin:8px;
  border-radius: 4%;
  border:1px solid #fff;
  background-color:hsla(30, 70%, 70%, 1.0) ;
}

.new-place > a {
  color:black;
}

.direction {
  display:flex;
  justify-content: space-between;
  width: 90%;
}

.btn {
  width: 150px;
  background: #3ccace;
  text-align: center;
  border-radius: 4%;
  border:1px solid #fff;
  bottom: 32px;
  right: 24px;
  padding: 15px 0;
  margin-bottom:20px;
  cursor:pointer;
}

