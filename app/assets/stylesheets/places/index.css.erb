/* main */
.main {
  height: 600px;
  /* background-color: rgba(95, 158, 160, 0.39); */
  /* background-image: url(IMG_9797.JPG); */
  background-size: cover;
  background-position: center;

  background-image: url("<%= asset_path('background5.jpg') %>");
  display:flex;
}

/* メインの左 */
.main-contents-left {
  height: 600px;
  width:60%;
  display: flex;
  justify-content: center;
  flex-direction:column;
  align-items: center;
  /*background-color: hsla(30, 40%, 90%, 1.0);*/
}

.place {
  font-size:32px;
  font-weight:bold;
  position: relative;
  padding:8px;
  margin-bottom:24px;
  text-align: center;
  color:#fff;
}

.place:before {
  position: absolute;
  bottom: -5px;
  left: calc(50% - 30px);
  width: 60px;
  height: 5px;
  content: '';
  border-radius: 3px;
  background: red;
}

#target {
  width: 90%;
  height: 400px;
}

a {
  color: #000000;
  text-decoration:none;
}

.search {
  padding:24px 0;
  display:block;
}

#address {
  display:inline-block;
  width:300px;
}

#search {
  cursor:pointer;
  display: inline-block;
  appearance: none;
  border-radius: 5px;
  background: #fd9535;
  color: #fff;
  padding: 8px 16px;
  font-size: 16px;
  border:1px solid #fff;
}

#search:hover {
  background: #ffaf55;
}



.direction {
  display:flex;
  justify-content: space-between;
  width: 90%;
}

.btn {
  width: 150px;
  background: #337079;
  text-align: center;
  border-radius: 4%;
  border:1px solid #fff;
  bottom: 32px;
  right: 24px;
  padding: 15px 0;
  margin-bottom:20px;
  cursor:pointer;
  color:#FFF;
}

.btn:hover {
  background:rgba(51,112,121,80%);
}

/* メインの右 */
.main-contents-right {
  width:40%;
}

/* メインの右上 */
.main-content-right-upper {
  width:85%;
  height:30%;
  margin:0 auto;
}

.upper-explain-title {
  padding-top:30px;
  color: #FFFFFF;
  font-family: "Poppins", Poppins;
  font-size: 30px;
  font-weight: bold;
  border-bottom:1px solid #FFF;
}

.explain-content {
  color: #FFFFFF;
  list-style:none;
  font-size: 20px;
}

/*メイン右中央部分*/
.main-content-right-middle {
  width:100%;
  height:45%;
  padding:0 10px;
}
.place-show {
  display:flex;
  justify-content:space-between;
  width:100%;
  height:100%;
  border:1px solid #dedede;
  background-color:rgba(0,0,0,0.3);
}

.place-show-left{
  width:40%;
  height:100%;
  display:flex;
  padding:20px 0;
}

.mypage-item-box {
  height: 50%;
  width: 80%;
  background-color: rgba(0, 0, 0,0);
}
.item-box-img {
  height: 100%;
  width: 100%;
  object-fit: contain;
}
.place-show-right{
  width:60%;
  margin-right:20px;
  margin-left:10px;
}

.detail-table {
  width: 100%;
  height:100%;
  padding:5px 0;
}

.detail-item {
  width: 20%;
  height:20%;
  background-color: #eee;
  border: 1px solid #dedede;
  font-size: 10px;
  text-align: center;
}

.detail-value {
  background-color: #337079;
  width: 80%;
  height:20%;
  padding: 5px;
  border: 1px solid #dedede;
  font-size: 10px;
  color:#FFF;
}

.detail-item-remark {
  width: 20%;
  height:40%;
  background-color: #eee;
  border: 1px solid #dedede;
  font-size: 10px;
  text-align: center;
}

.detail-value-remark {
  background-color: #337079;
  width: 80%;
  height:40%;
  padding: 5px;
  border: 1px solid #dedede;
  font-size: 10px;
  color:#FFF;
}

/*メイン右下*/
.main-content-right-lower {
  width:85%;
  height:25%;
  margin:0 auto;
}

.lower-explain-title {
  color: #FFFFFF;
  font-family: "Poppins", Poppins;
  font-size: 30px;
  font-weight: bold;
  border-bottom:1px solid #FFF;
  margin-bottom:10px;
}


.new-place  {
  display:inline-block;
  font-size:32px;
  font-weight:bold;
  background-color: #fff100;
  border-bottom: 5px solid #ccc100;
  padding:8px 8px;
  text-align: center;
}

.new-place:hover {
  margin-top: 3px;
  background: #fff20a;
  border-bottom: 2px solid #ccc100;
}

.hidden {
  display:none;
}

@media (max-width: 1024px) {
  .main-contents-left {
    width:55%;
  }
  #address {
    width:60%;
  }
  .main-contents-right{
    width:45%;
    margin-right:10px;
  }
  .main-content-right-upper{
    width:95%;
    height:30%;
  }
  .upper-explain-title {
    font-size:20px;
  }
  .explain-content {
    font-size:14px;
  }
  .main-content-right-middle{
    height:50%;
    padding:0;
  }
  .mypage-item-box {
    width:100%;
  }
  .mypage-place-show-left {
    font-size:10px;
  }
  .place-show-right {
    margin:0;
  }
  .main-content-right-lower{
    height:20%;
    width:100%;
  }
  .lower-explain-title {
    font-size:20px;
  }
  .new-place {
    font-size:14px;
  }
}
@media (max-width: 599px) {
  .main {
    height:100%;
    display:block;
  }
  .main-contents-left {
    width:100%;
  }
  #target {
    width:95%;
  }
  .search {
    display:flex;
    justify-content:space-around;
  }
  #address {
    width:60%;
  }
  .main-contents-right{
    width:100%;
    height:100%;
  }
  .main-content-right-upper{
    width:85%;
    height:20%;
    padding-bottom:10px;
  }
  .upper-explain-title {
    font-size:20px;
    padding:0;
  }
  .explain-content {
    font-size:15px;
  }
  .main-content-right-middle{
    height:60%;
  }
  .mypage-place-show-left {
    font-size:10px;
  }
  .place-show-right {
    margin:0;
  }
  .main-content-right-lower{
    height:20%;
    width:85%;
    padding-bottom:5px;
  }
  .lower-explain-title {
    font-size:20px;
  }
  .new-place {
    font-size:20px;
  }
  .mypage-place-show-left {
    font-size:10px;
  }
  .place-show-right {
    margin:0;
  }
  .main-content-right-lower{
    height:20%;
  }
  .lower-explain-title {
    font-size:20px;
  }
  .new-place {
    font-size:20px;
  }
}