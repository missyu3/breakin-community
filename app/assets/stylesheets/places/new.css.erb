.new-contents {
  background-image: url("<%= asset_path('default_user.jpg') %>");
  background-size: cover;
  background-position: center;
  height:100%;
  width:100%;
}

.contents {
  width:800px;
  height:100%;
  margin: 0 auto;
}

.content {
  display:flex;
  flex-direction:column;
  text-align:center;
  justify-content:center;
  align-items:center;
  padding-top:20px;
  height:100%;
  color:white;
  font-weight:bold;
  background-color:rgba(0,0,0,0.3);
}

.new-name {
  width:600px;
  height:100px;
  padding-bottom:20px;
  display:flex;
  justify-content:space-between;
}

.new-name-text {
  font-size:24px;
  width:30%;
  line-height:80px;
  text-align:left;
}
.new-name-form {
  width:50%;
  height:100px;
}

.new-name-form > textarea {
  display:inline-block;
  height:80px;
  width:100%;
}

.new-name-form > .field_with_errors > textarea {
  display:inline-block;
  height:80px;
  width:100%;
}

.new-address {
  width:600px;
  padding-bottom:20px;
  display:flex;
  height:100px;
  justify-content:space-between;
}

.new-address-text {
  font-size:24px;
  width:30%;
  line-height:80px;
  text-align:left;
}
.new-address-form {
  width:50%;
}

.new-address-form > textarea {
  height:80px;
  width:100%;
}

.new-address-form > .field_with_errors > textarea {
  display:inline-block;
  height:80px;
  width:100%;
}

.new-remark {
  width:600px;
  height:100px;
  padding-bottom:20px;
  display:flex;
  justify-content:space-between;
}

.new-remark-text {
  font-size:24px;
  width:30%;
  line-height:80px;
  text-align:left;
}
.new-remark-form {
  width:50%;
}

.new-remark-form > textarea {
  height:100px;
  width:100%;
}


.new-price {
  width:600px;
  height:100px;
  padding-bottom:20px;
  display:flex;
  justify-content:space-between;
  text-align:right;
}

.new-price-text {
  font-size:24px;
  width:30%;
  line-height:80px;
  text-align:left;
}
.new-price-form {
  width:50%;
  display:flex;
}

.new-price-form > textarea {
  height:80px;
  width:100%;
}

.new-price-form > .field_with_errors {
  width:100%;
}
.new-price-form > .field_with_errors > textarea {
  display:inline-block;
  height:80px;
  width:100%;
}


.new-image {
  width:600px;
  height:100px;
  padding-bottom:20px;
  display:flex;
  justify-content:space-between;
}

.new-image-text {
  font-size:24px;
  width:50%;
  line-height:80px;
  text-align:left;
}

.new-image-form {
  padding:25px 0;
  margin:0 auto;
  width:50%;
}

.new-image-form > .image {
  width:100%;
}

.content > input {
  color: #000;
  background-color: #fff100;
  border-bottom: 5px solid #ccc100;
  margin-bottom:10px;
}

.content > input:hover {
  margin-top: 3px;
  color: #000;
  background: #fff20a;
  border-bottom: 2px solid #ccc100;
}

.content > a {
  color: #000;
  background-color:#79CF9F;
  border-bottom: 5px solid #3BB26F;
  margin-bottom:10px;
}

.content > a:hover {
  margin-top: 3px;
  color: #000;
  background-color:#79CF9F;
  border-bottom: 2px solid #3BB26F;
}

@media (max-width: 599px) {
  .contents {
    width:100%;
  }
  .new-name {
    width:100%;
    justify-content:space-around;
  }
  .new-name-text {
    line-height:1.5em;
    }
  .new-address {
    width:100%;
    justify-content:space-around;
  }
  .new-address-text {
    line-height:1.5em;
    }
  .new-price {
    width:100%;
    justify-content:space-around;
  }
  .new-price-text {
    line-height:1.5em;
    }
  .new-remark {
    width:100%;
    justify-content:space-around;
  }
  .new-remark-text {
    line-height:1.5em;
    }
  .new-image {
    width:100%;
    justify-content:space-around;
  }
  .new-image-text {
    line-height:1.5em;
    width:30%;
    }
  .new-image-form {
    margin:0;
  }
}
